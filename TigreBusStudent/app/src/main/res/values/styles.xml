<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="recorridos" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/blanco</item>
        <item name="android:textColor">@color/azul</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>


    <style name="font"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/bold</item>
    </style>


    <style name="switchtheme">
        <item name="android:colorControlActivated">@color/blanco</item>
    </style>


</resources>
